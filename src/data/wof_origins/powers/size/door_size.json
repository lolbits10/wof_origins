{
	"name": "Door Assist",
	"description": "Sneak to fit through doors. Sneak again to return to normal.",
	"type": "origins:multiple",
	"size": {
		"type": "origins:active_self",
		"entity_action": {
			"type": "origins:if_else",
			"condition": {
				"type": "origins:power_active",
				"power": "*:*_toggle"
			},
			"if_action": {
				"type": "origins:execute_command",
				"command": "scale set 1.3"
			},
			"else_action": {
				"type": "origins:execute_command",
				"command": "scale set 2"
			}
		},
		"hud_render": {
			"should_render": false
		},
		"cooldown": 20,
		"key": {
			"key": "key.sneak"
		}
	},
	"toggle": {
		"type": "origins:toggle",
		"active_by_default" : false,
		"key": {
			"key": "key.sneak"
		}
	}
}
