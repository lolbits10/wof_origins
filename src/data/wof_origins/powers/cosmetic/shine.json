{
  "name": "Glow",
  "description": "You have bioluminescent scales.",
  "type": "origins:multiple",
  "set": {
    "type": "origins:action_over_time",
    "interval": 2,
    "entity_action": {
      "type": "origins:block_action_at",
      "block_action": {
        "type": "origins:offset",
        "y": 3,
        "action": {
          "type": "origins:execute_command",
          "command": "/fill ~ ~1 ~ ~ ~1 ~ minecraft:light[level=12] replace minecraft:air"
        }
      }
    }
  },
  "unset": {
    "type": "origins:action_over_time",
    "interval": 2,
    "entity_action": {
      "type": "origins:block_action_at",
      "block_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:execute_command",
            "command": "/fill ~-5 ~-5 ~5 ~5 ~5 ~2 minecraft:air replace minecraft:light"
          },
          {
            "type": "origins:execute_command",
            "command": "/fill ~5 ~-5 ~-5 ~-5 ~5 ~-2 minecraft:air replace minecraft:light"
          },
          {
            "type": "origins:execute_command",
            "command": "/fill ~5 ~-5 ~5 ~2 ~5 ~-2 minecraft:air replace minecraft:light"
          },
          {
            "type": "origins:execute_command",
            "command": "/fill ~-5 ~-5 ~5 ~-2 ~5 ~-2 minecraft:air replace minecraft:light"
          },
          {
            "type": "origins:execute_command",
            "command": "/fill ~-5 ~-5 ~-5 ~5 ~-1 ~5 minecraft:air replace minecraft:light"
          },
          {
            "type": "origins:execute_command",
            "command": "/fill ~-5 ~5 ~-5 ~5 ~2 ~5 minecraft:air replace minecraft:light"
          }
        ]
      }
    }
  }
}
