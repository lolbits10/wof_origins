      "amplifier": 1,
      "is_ambient": true,
      "show_particles": false,
      "show_icon": true
    },
    {
      "effect": "minecraft:mining_fatigue",
      "is_ambient": true,
      "show_particles": false,
      "show_icon": true
    },
    {
      "effect": "minecraft:weakness",
      "is_ambient": true,
      "show_particles": false,
      "show_icon": true
    }
  ],
  "condition": {
    "type": "origins:and",
    "conditions": [
      {
        "type": "origins:status_effect",
        "effect": "minecraft:fire_resistance",
        "inverted": true
      },
      {
        "type": "origins:biome",
        "condition": {
          "type": "origins:temperature",
          "comparison": ">=",
          "compare_to": 2.0
        }
      }
    ]
  }
